<launch>
    <!-- Launch Gazebo Simulation -->
    <arg name="x" default="0.0"/>
    <arg name="y" default="-5.0"/>
    <arg name="z" default="0"/>
	<arg name="world" default="$(find prometheus_gazebo)/worlds/obstacle.world"/>
	<arg name="sdf" default="$(find prometheus_gazebo)/models/P300/P300.sdf"/>
	<arg name="model" default="P300"/>
    <include file="$(find prometheus_gazebo)/launch/sitl.launch">
	  <arg name="world" value="$(arg world)"/>
	  <arg name="sdf" value="$(arg sdf)"/>
	  <arg name="model" value="$(arg model)"/>
      <arg name="x" value="$(arg x)"/>
      <arg name="y" value="$(arg y)"/>
      <arg name="z" value="$(arg z)"/>
    </include>

    <include file="$(find prometheus_gazebo)/launch/tf_transform.launch">
    </include>

	<!-- Choose sensor 1 for 3d lidar, 2 for realsense camera-->
	<arg name="sensor" default="1"/>
	<arg name="visualization" default="true"/>
	<group if="$(eval arg('sensor') == 1)">
		<!-- run the rviz -->
		<group if="$(arg visualization)">
		<node type="rviz" name="rviz" pkg="rviz" args="-d $(find prometheus_gazebo)/config/rviz_local_planning_3dlidar.rviz" />
		</group>
	</group>

	<group if="$(eval arg('sensor') == 2)">
		<include file="$(find rtabmap_ros)/launch/rtabmap.launch">
        <arg name="rtabmap_args"       value="--delete_db_on_start"/>
        <arg name="depth_topic"        value="/realsense_d400/depth/image_raw"/>
		<arg name="rgb_topic"          value="/realsense_plugin/camera/color/image_raw"/>
        <arg name="camera_info_topic"  value="/realsense_plugin/camera/color/camera_info"/>
        <arg name="frame_id"           value="base_link"/>
        <arg name="visual_odometry"    value="false"/>
        <arg name="odom_topic"         value="/ground_truth/state"/>  
        <arg name="queue_size"         value="200"/>
		<arg name="rtabmapviz"         value="false"/>
    	</include>
		<!-- run the rviz -->
		<group if="$(arg visualization)">
		<node type="rviz" name="rviz" pkg="rviz" args="-d $(find prometheus_gazebo)/config/rviz_local_planning_realsense.rviz" />
		</group>
    </group>

    <include file="$(find prometheus_local_planning)/launch/planning_px4.launch">
    </include>

	<node pkg="prometheus_mission" type="planning_mission" name="planning_mission" output="screen" launch-prefix="gnome-terminal --">	
	</node>

</launch>